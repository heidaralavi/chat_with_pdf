{
	"name": "Chat With PDF",
	"dockerComposeFile": [
		"docker-compose.yml"
		],
	"service": "python",
	"forwardPorts": [11434,8888,8000],
	"workspaceFolder": "/app",
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.vscode-pylance",
				"ms-python.python",
				"ms-toolsai.jupyter",
				"ms-toolsai.vscode-jupyter-cell-tags",
				"ms-toolsai.vscode-jupyter-slideshow",
				"ms-toolsai.jupyter-keymap",
				"GitHub.copilot",
				"GitHub.copilot-chat"
			]
		}
	}

